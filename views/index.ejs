<%- include('layout') %>
<head>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>StockTrade</title>
</head>
<h1 style="color: blue; text-align: center;">Welcome to StockTrade!</h1>
<p style="color: blue; text-align: center;">Trade stocks easily and securely.</p>

<!-- Carousel Section -->
<div class="carousel">
    <div class="carousel-track">
        <% images.forEach(function(image) { %>
            <div class="carousel-slide">
                <img src="<%= image %>" alt="Trading Image">
            </div>
        <% }); %>
    </div>
    <button class="carousel-button left">&lt;</button>
    <button class="carousel-button right">&gt;</button>
</div>

<!-- Trading Image Section -->
<div class="images-trade">
    <img src="/images/stock.jpg" alt="Trading Image">
</div>
<div class="container1">
    <h2>All Messages</h2>
    <% if (messages && messages.length > 0) { %>
        <ul class="messages-list">
            <% messages.forEach((message) => { %>
                <li class="message-item">
                    <p class="message-content"><%= message.content %></p>
                    <small class="message-date">Posted on <%= new Date(message.createdAt).toLocaleString() %></small>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="no-messages">No messages available.</p>
    <% } %>
</div>

