<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* General Body Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            color: #444;
        }

        /* Container for the transaction details */
        .container {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 480px;
            width: 100%;
            margin: 50px auto;
            padding: 30px;
            text-align: center;
        }

        /* Page Title */
        h2 {
            font-size: 32px;
            color: #2c3e50;
            margin-bottom: 20px;
            font-weight: 600;
        }

        /* Plan & Amount Details */
        .details {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin: 10px 0;
        }

        /* QR Code Style */
        .qr-code {
            width: 220px;
            height: 220px;
            margin: 30px 0;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

        .qr-code:hover {
            transform: scale(1.1);
        }

        /* Message Preview */
        .message-preview {
            font-size: 16px;
            color: #555;
            background-color: #e0f7fa;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* WhatsApp Button Styling */
        .whatsapp-btn {
            background-color: #25D366; /* WhatsApp Green */
            color: white;
            font-size: 18px;
            padding: 15px 25px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            display: inline-flex;
            align-items: center;
            transition: background-color 0.3s;
        }

        .whatsapp-btn img {
            width: 25px;
            margin-right: 10px;
        }

        .whatsapp-btn:hover {
            background-color: #128C7E;
        }

        /* Back Button Styling */
        .back-button {
            display: inline-block;
            margin-top: 30px;
            padding: 12px 30px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            transition: background-color 0.3s;
        }

        .back-button:hover {
            background-color: #2980b9;
        }

        /* Responsive Design for Mobile */
        @media (max-width: 768px) {
            .container {
                padding: 20px;
                max-width: 100%;
            }

            .qr-code {
                width: 200px;
                height: 200px;
            }

            h2 {
                font-size: 28px;
            }

            .details {
                font-size: 18px;
            }

            .whatsapp-btn {
                font-size: 16px;
                padding: 12px 20px;
            }

            .back-button {
                font-size: 16px;
                padding: 10px 25px;
            }
        }

        /* Responsive Design for Small Screens */
        @media (max-width: 480px) {
            h2 {
                font-size: 24px;
            }

            .details {
                font-size: 16px;
            }

            .qr-code {
                width: 180px;
                height: 180px;
            }

            .whatsapp-btn {
                font-size: 14px;
                padding: 12px 20px;
            }

            .back-button {
                font-size: 14px;
                padding: 8px 20px;
            }
        }

    </style>
</head>
<body>

    <!-- Main Transaction Container -->
    <div class="container">
        <h2>Complete Your Payment</h2>
        <p class="details">Plan: <%= plan %></p>
        <p class="details">Amount: â‚¹<%= amount %></p>

        <!-- QR Code Image -->
        <img src="/images/scanner.png" alt="Scan to Pay" class="qr-code">

        <!-- Instructions for Payment -->
        <p>Scan the QR Code to complete your payment.</p>

        <!-- Go Back Button -->
        <a href="/" class="back-button">Go Back</a>

        <!-- Message Preview -->
        <div class="message-preview" id="messagePreview">
            Once the payment is done, click on the button below and send the message along with the payment screenshot.
        </div>

        <!-- WhatsApp Button -->
        <a href="#" id="whatsappLink">
            <button class="whatsapp-btn">
                <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp Icon" />
                Send to WhatsApp
            </button>
        </a>
    </div>

    <script>
        // Dynamic message for WhatsApp button
        const previewMessage = "Once the payment is done, click on the button below and send the message along with the payment screenshot.";
        const messagePreviewElement = document.getElementById("messagePreview");

        // Update the message preview
        messagePreviewElement.textContent = previewMessage;

        // Define the phone number and prepare the dynamic message
        const phoneNumber = "+919320928936";  // Replace with actual phone number
        const dynamicMessage = encodeURIComponent(previewMessage); // Dynamically encode the message

        // Update WhatsApp button link dynamically
        const whatsappButtonLink = document.getElementById("whatsappLink");
        whatsappButtonLink.href = `https://wa.me/${phoneNumber}?text=${dynamicMessage}`;

    </script>

</body>
</html>
