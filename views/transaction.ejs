    // }

            // Send data to the server to save in the transactions table
            fetch('/save-transaction', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    user_email: userEmail,
                    user_name: userName,
                    plan: plan,
                    amount: amount,
                    status: 'pending',  // Initially, status is pending
