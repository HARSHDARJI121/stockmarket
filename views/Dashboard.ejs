<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/progressbar.js"></script> <!-- ProgressBar.js -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding-top: 30px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        table th, table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }
        .progress-circle {
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Accepted Transactions</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Plan</th>
                    <th>Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Days Left</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(function(transaction) { %>
                    <tr>
                        <td><%= transaction.name %></td>
                        <td><%= transaction.email %></td>
                        <td><%= transaction.plan %></td>
                        <td><%= transaction.amount %></td>
                        <td><%= new Date(transaction.start_date).toLocaleDateString() %></td>
                        <td><%= new Date(transaction.end_date).toLocaleDateString() %></td>
                        <td>
                            <div class="progress-circle" id="circle<%= transaction.id %>"></div>
                            <script>
                                // Get the start and end date
                                const startDate = new Date("<%= transaction.start_date %>");
                                const endDate = new Date("<%= transaction.end_date %>");
                                const currentDate = new Date();
                                const totalDays = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
                                const remainingDays = Math.ceil((endDate - currentDate) / (1000 * 60 * 60 * 24));

                                // Determine progress value
                                const progressValue = (remainingDays / totalDays) * 100;

                                // Progress bar logic
                                const bar = new ProgressBar.Circle('#circle<%= transaction.id %>', {
                                    color: '#3498db',
                                    strokeWidth: 8,
                                    trailWidth: 8,
                                    duration: 1400,
                                    easing: 'easeInOut',
                                    from: { color: '#ff0000', width: 8 },
                                    to: { color: '#00ff00', width: 8 },
                                    text: {
                                        value: `${remainingDays}/${totalDays}`,
                                        style: {
                                            color: '#333',
                                            fontSize: '16px',
                                            fontWeight: 'bold',
                                        },
                                    },
                                    step: (state, circle) => {
                                        circle.setText(`${Math.max(remainingDays, 0)}/${totalDays}`);
                                    }
                                });

                                bar.animate(progressValue / 100); // 0 to 1 for progress bar
                            </script>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
