<h2>All Users</h2>

<% if (users && users.length > 0) { %> <!-- Ensure users is defined and not empty -->
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %> 
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>No users found</p>
<% } %>
